      }
       .rate{
          font-size: 15px;
          font-weight: bold;
      }
      #Location{
        font-size: 20px;
        }
        .Email{
          
        }
       .question{
          width: 90px;
          margin-top: -15px;
          margin-left: 250px;
      }
      .Info{
          margin-left: 100px
      }
      .customer{
          margin-top:-415px;
          margin-left:800px;
      }
